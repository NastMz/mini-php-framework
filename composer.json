{
  "name": "nastmz/micro-php-framework",
  "description": "Custom PHP micro-framework template with DDD & Clean Architecture",
  "type": "project",
  "require": {
    "php": "^8.4",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "serve": "php bin/console serve",
    "migrate": "php bin/console migrate",
    "cache:clear": "php bin/console cache:clear",
    "key:generate": "php bin/console key:generate"
  },
  "license": "MIT"
}
